---
import { Picture } from "astro:assets";
import heroImage from "@/assets/hero.png";
import Link from "@/components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="Astronaut in the air"
      widths={[200, 400, 600]}
      sizes="(max-width: 800px) 100vw, 620px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      Portfolio Allan Mendoza
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
     Full-Stack Developer with 8+ years of experience delivering web and software solutions for non-profits and businesses. Work focuses on building reliable, maintainable systems end to end planning, development, database design, integrations, and production deployment always with performance and user experience in mind.
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="https://github.com/AMendoza180890"
        target="_blank"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxl-github" />
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="https://www.linkedin.com/in/amendoza1890/"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxl-linkedin" />
      </Link>
    </div>
  </div>
</main>
